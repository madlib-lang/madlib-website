import type { Element } from "MadUI"
import {
  a,
  className,
  div,
  href,
  li,
  text,
  ul
} from 'MadUI'
import { strata } from 'Strata'

import type { Link } from '../Types'

stratum = strata('nav')

NavLink :: Link -> Element
NavLink = (s) =>
  <li className={stratum.e('item')}>
    <a href={s.href}>
      {s.text}
    </a>
  </li>

export Nav = (s) =>
  <div className={stratum.e('')}>
    <ul className={stratum.e('list')}>
      {map(NavLink, s)}
    </ul>
  </div>
